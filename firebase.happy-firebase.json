{
  "database": {
    "rules": "apps/happy/firebase/database.rules.json"
  },
  "firestore": {
    "rules": "apps/happy/firebase/firestore.rules",
    "indexes": "apps/happy/firebase/firestore.indexes.json"
  },
  "hosting": {
    "public": "apps/happy/firebase/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "apps/happy/firebase/storage.rules"
  },
  "functions": [
    {
      "codebase": "happy-functions-happy",
      "source": "dist/apps/happy/functions/happy",
      "runtime": "nodejs16",
      "ignore": ["*.local"]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
